<!--components/progress/progress.wxml-->
<view class="progress-container" bindtap="onProgressTap">
  <!-- 进度文本 -->
  <view class="progress-text" wx:if="{{showText}}">
    <view class="progress-info">{{completed}}/{{total}}</view>
    <view class="progress-percentage">{{animatedPercentage.toFixed(0)}}%</view>
  </view>
  
  <!-- 进度条 -->
  <view class="progress-bar">
    <view 
      class="progress-fill" 
      style="width: {{animatedPercentage}}%; background-color: {{color}};"
      animation="{{progressAnimation}}">
    </view>
  </view>
</view>