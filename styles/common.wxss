/* 边框圆角 */
.rounded-none {
  border-radius: 0;
}

.rounded-sm {
  border-radius: 4rpx;
}

.rounded {
  border-radius: 8rpx;
}

.rounded-md {
  border-radius: 12rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-xl {
  border-radius: 20rpx;
}

.rounded-2xl {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 50%;
}

/* 阴影 */
.shadow-none {
  box-shadow: none;
}

.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.shadow-md {
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.15);
}

.shadow-lg {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.shadow-xl {
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.25);
}

/* 显示隐藏 */
.hidden {
