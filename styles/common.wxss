.align-center { align-items: center; }
.align-end { align-items: flex-end; }
.align-stretch { align-items: stretch; }

/* 位置工具类 */
.position-relative { position: relative; }
.position-absolute { position: absolute; }
.position-fixed { position: fixed; }
.position-static { position: static; }

/* 动画工具类 */
.fade-in {
  animation: fadeIn var(--transition-normal) var(--ease-in-out);
}

.fade-out {
  animation: fadeOut var(--transition-normal) var(--ease-in-out);
}

.slide-in-up {
  animation: slideInUp var(--transition-normal) var(--ease-in-out);
}

.slide-in-down {
  animation: slideInDown var(--transition-normal) var(--ease-in-out);
}

.scale-in {
  animation: scaleIn var(--transition-normal) var(--ease-in-out);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

@keyframes slideInUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

@keyframes slideInDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

@keyframes scaleIn {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

/* 响应式工具类 */
@media (max-width: 750rpx) {
  .mobile-hidden { display: none; }
  .mobile-block { display: block; }
  .mobile-flex { display: flex; }
}

@media (min-width: 751rpx) {
  .desktop-hidden { display: none; }
  .desktop-block { display: block; }
  .desktop-flex { display: flex; }
}
