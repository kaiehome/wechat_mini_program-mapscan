/* styles/common.wxss */
/* 公共样式定义 */

/* 重置样式 */
view, text, image, button, input, textarea, picker, navigator, swiper, scroll-view, map, canvas, video, audio, cover-view, cover-image {
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
  font-size: var(--font-md);
  line-height: var(--line-height-normal);
  color: var(--text-color);
  background-color: var(--bg-secondary);
}

/* 通用容器 */
.container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
}

.content {
  padding: var(--spacing-lg);
}

.section {
  margin-bottom: var(--spacing-xl);
}

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg) var(--spacing-xl);
  border-radius: var(--radius-round);
  font-size: var(--font-md);
  font-weight: var(--font-weight-medium);
  border: none;
  cursor: pointer;
  transition: all var(--transition-normal) var(--ease-in-out);
  text-align: center;
  text-decoration: none;
  box-sizing: border-box;
}

.btn-primary {
  background-color: var(--btn-primary-bg);
  color: var(--btn-primary-color);
  box-shadow: var(--shadow-medium);
}

.btn-primary:active {
  background-color: var(--btn-primary-hover);
  transform: translateY(2rpx);
}

.btn-secondary {
  background-color: var(--btn-secondary-bg);
  color: var(--btn-secondary-color);
  border: 2rpx solid var(--btn-secondary-border);
}

.btn-secondary:active {
  background-color: var(--bg-tertiary);
}

.btn-disabled {
  background-color: var(--btn-disabled-bg);
  color: var(--btn-disabled-color);
  cursor: not-allowed;
  box-shadow: none;
}

.btn-disabled:active {
  transform: none;
}

/* 按钮尺寸 */
.btn-small {
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: var(--font-sm);
  border-radius: var(--radius-medium);
}

.btn-large {
  padding: var(--spacing-xl) var(--spacing-xxl);
  font-size: var(--font-lg);
  border-radius: var(--radius-round);
}

.btn-block {
  width: 100%;
  display: flex;
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: var(--radius-large);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--card-shadow);
  border: 1rpx solid var(--card-border);
}

.card-header {
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-light);
  margin-bottom: var(--spacing-lg);
}

.card-title {
  font-size: var(--font-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
  margin-bottom: var(--spacing-sm);
}

.card-subtitle {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.card-body {
  padding: var(--spacing-lg) 0;
}

.card-footer {
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
  margin-top: var(--spacing-lg);
}

/* 列表样式 */
.list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-large);
  overflow: hidden;
  box-shadow: var(--shadow-light);
}

.list-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--list-item-border);
  background-color: var(--list-item-bg);
  transition: background-color var(--transition-fast) var(--ease-in-out);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: var(--list-item-hover);
}

.list-item-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: var(--font-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-color);
  margin-bottom: var(--spacing-xs);
}

.list-item-desc {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

.list-item-arrow {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
}

/* 进度条样式 */
.progress {
  width: 100%;
  height: 12rpx;
  background-color: var(--progress-bg);
  border-radius: var(--radius-small);
  overflow: hidden;
  position: relative;
}

.progress-bar {
  height: 100%;
  background-color: var(--progress-fill);
  border-radius: var(--radius-small);
  transition: width var(--transition-slow) var(--ease-in-out);
}

.progress-text {
  font-size: var(--font-sm);
  color: var(--progress-text);
  margin-top: var(--spacing-sm);
  text-align: center;
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-round);
  font-size: var(--font-xs);
  font-weight: var(--font-weight-medium);
  line-height: 1;
}

.badge-primary {
  background-color: var(--primary-color);
  color: var(--text-white);
}

.badge-secondary {
  background-color: var(--secondary-color);
  color: var(--text-white);
}

.badge-success {
  background-color: var(--success-color);
  color: var(--text-white);
}

.badge-warning {
  background-color: var(--warning-color);
  color: var(--text-white);
}

.badge-error {
  background-color: var(--error-color);
  color: var(--text-white);
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-error {
  color: var(--error-color);
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: var(--font-weight-bold);
}

.text-italic {
  font-style: italic;
}

.text-underline {
  text-decoration: underline;
}

