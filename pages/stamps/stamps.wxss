/* pages/stamps/stamps.wxss */
@import "/styles/variables.wxss";

/* 自定义导航栏通用样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--primary-color, #4CAF50);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.nav-title {
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

/* 页面容器基础样式 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background: #f7f7f7;
  padding: 0; /* 去除页面容器左右留白 */
}

/* 以下保留原有印章页样式（示例） */
.statistics-section { padding: 16px; }
.statistics-title { font-size: 16px; font-weight: 600; margin-bottom: 8px; }
/* 统一对齐：将统计内容改为三列网格，并隐藏分隔线 */
.statistics-content { display:grid; grid-template-columns: repeat(3, 1fr); gap: 12px; align-items:center; padding: 8px 0; }
.stat-divider { display: none; }
.stat-item { text-align:center; }
.stat-number { font-size: 20px; font-weight: 700; color: var(--primary-color, #4CAF50); }
.stat-label { color:#666; margin-top: 4px; }
.stat-divider { width:1px; height:24px; background:#e0e0e0; }

.progress-bar { height: 8px; background:#e0e0e0; border-radius:8px; margin: 8px 0 12px; }
.progress-fill { height: 8px; background: var(--primary-color, #4CAF50); border-radius:8px; }

.stamps-section { padding: 16px 8px; box-sizing: border-box; }
.stamps-title { 
  font-size: 16px; 
  font-weight: 600; 
  margin-bottom: 8px; 
  color: #333;
  text-align: left;
}
.stamps-grid { display: grid; width: 100%; box-sizing: border-box; grid-template-columns: repeat(3, 1fr); gap: 4px; }
.stamp-item { background:#fff; border-radius:10px; padding:8px; box-shadow:0 2px 8px rgba(0,0,0,0.06); width: 100%; box-sizing: border-box; }
.stamp-item .stamp-icon { position: relative; }
.stamp-image { width: 100%; height: 100px; /* 调整图标高度，与进度区域格式一致 */ }
.stamp-placeholder { width:100%; height:92px; background:#f0f0f0; border-radius:8px; display:flex; align-items:center; justify-content:center; }
.placeholder-text { color:#999; font-size:18px; }
.stamp-status { position:absolute; top:6px; right:6px; background:rgba(255,255,255,0.9); border-radius:12px; padding: 2px 6px; font-size:12px; }
.stamp-status.completed { color: #fbc02d; }
.stamp-status.pending { color:#999; }
.stamp-info { margin-top:8px; text-align:center; }
.stamp-name { font-weight:600; font-size:14px; line-height:1.25; }
.stamp-area { color:#888; font-size:12px; margin-top:2px; }
.stamp-time { color:#666; font-size:12px; margin-top:4px; }

.action-section { padding: 16px; display:flex; flex-direction:row; align-items:stretch; }
.action-btn { border-radius:8px; padding:10px 14px; flex:1; text-align:center; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; min-width:0; }
.action-btn + .action-btn { margin-left:8px; }
.btn-primary { background: var(--primary-color, #4CAF50); color:#fff; }
.btn-success { background: #2E7D32; color:#fff; }
.btn-warning { background: #F9A825; color:#fff; }

.completion-section { padding: 16px; }
.completion-title { font-size:18px; font-weight:700; margin-bottom:6px; }
.completion-content { color:#555; }
.completion-tips { margin-top:8px; color:#666; }

.stamp-animation { position: fixed; bottom: 24px; right: 24px; }
.animation-image { width: 64px; height: 64px; }
.animation-text { position:absolute; top:-6px; right:-6px; background: var(--primary-color, #4CAF50); color:#fff; padding:2px 6px; border-radius:12px; font-size:12px; }
.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #333;
  text-align: left;
}
.stamp-status-text { margin-top:6px; font-size:12px; text-align:center; }
.stamp-status-text.completed { color:#fbc02d; }
.stamp-status-text.pending { color:#999; }

/* 响应式设计 - 小屏幕优化 */
@media screen and (max-width: 375px) {
  .stamps-section { padding: 16px 4px; }
  .stamps-grid { gap: 2px; }
  .stamp-item { padding: 6px; }
  .stamp-image { height: 90px; }
}

/* 响应式设计 - 大屏幕优化 */
@media screen and (min-width: 414px) {
  .stamps-section { padding: 16px 12px; }
  .stamps-grid { gap: 6px; }
  .stamp-item { padding: 10px; }
  .stamp-image { height: 110px; }
}