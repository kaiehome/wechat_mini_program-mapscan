/* pages/stamps/stamps.wxss */
.stamps-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 头部进度显示 */
.header-section {
  margin-bottom: 30rpx;
}

.progress-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.progress-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.progress-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 8rpx;
}

.stat-divider {
  font-size: 36rpx;
  margin: 0 20rpx;
  opacity: 0.7;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background-color: white;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.completion-status {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.completion-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.completion-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 印章展示区域 */
.stamps-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.stamps-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stamp-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.stamp-item.completed {
  border-color: #4CAF50;
  background-color: #f8fff8;
}

.stamp-item.pending {
  border-color: #e0e0e0;
  background-color: #fafafa;
}

.stamp-icon {
  position: relative;
  margin-bottom: 20rpx;
}

.stamp-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.stamp-status {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.stamp-info {
  text-align: center;
}

.stamp-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.stamp-item.completed .stamp-name {
  color: #4CAF50;
}

.stamp-time {
  font-size: 22rpx;
  color: #666;
}

.stamp-item.completed .stamp-time {
  color: #4CAF50;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-section button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 印章详情弹窗 */
.stamp-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.stamp-detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #e0e0e0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.modal-body {
  padding: 30rpx;
}

.stamp-preview {
  text-align: center;
  margin-bottom: 30rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.stamp-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
  text-align: center;
}

.stamp-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #333;
  width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  flex: 1;
}

.detail-value.completed {
  color: #4CAF50;
  font-weight: bold;
}

.detail-value.pending {
  color: #ff9800;
}

.modal-footer {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
  border-top: 1rpx solid #e0e0e0;
  text-align: right;
}

.modal-footer button {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 开发者工具 */
.dev-tools {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.dev-tools button {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .stamps-grid {
    grid-template-columns: 1fr;
  }
  
  .action-section {
    flex-direction: column;
  }
}
