/* pages/stamps/stamps.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统计信息 */
.statistics-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.statistics-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.statistics-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #E0E0E0;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background-color: #E0E0E0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

/* 印章展示 */
.stamps-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stamps-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.stamps-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stamp-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  border: 2rpx solid #E0E0E0;
  transition: all 0.3s ease;
  position: relative;
}

.stamp-item.completed {
  border-color: #4CAF50;
  background-color: #E8F5E8;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.2);
}

.stamp-item.pending {
  border-color: #CCCCCC;
  background-color: #F5F5F5;
}

.stamp-icon {
  position: relative;
  margin-bottom: 15rpx;
}

.stamp-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.stamp-status {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
}

.stamp-status.completed {
  background-color: #4CAF50;
}

.stamp-status.pending {
  background-color: #CCCCCC;
}

.stamp-info {
  text-align: center;
}

.stamp-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.stamp-area {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stamp-time {
  font-size: 18rpx;
  color: #4CAF50;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 20rpx;
}

.action-btn {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.action-row {
  display: flex;
  gap: 20rpx;
}

.action-row .action-btn {
  flex: 1;
  margin-bottom: 0;
}

/* 完成提示 */
.completion-section {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  color: white;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.3);
}

.completion-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.completion-content {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.completion-tips {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 印章动画 */
.stamp-animation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.animation-stamp {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: stampPop 2s ease-out;
}

@keyframes stampPop {
  0% { 
    transform: scale(0.5) rotate(-10deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(5deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 0;
  }
}

.animation-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
}

.animation-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-top: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}