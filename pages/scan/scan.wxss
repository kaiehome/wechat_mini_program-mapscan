/* pages/scan/scan.wxss */
@import "../../styles/variables.wxss";

/* 自定义导航栏通用样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--primary-color, #4CAF50);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box; /* 关键修复：高度包含内边距，避免遮挡 */
}

.nav-title {
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

/* 页面容器基础样式 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background: #f7f7f7;
}

/* 以下保留原有扫码页样式（示例） */
.scan-section {
  padding: 16px;
}
.scan-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}
.scan-description {
  color: #666;
  margin-bottom: 12px;
}
.scan-button-container { 
  display: flex; 
  justify-content: center; 
  margin: 12px 0 24px; 
}
.scan-button {
  background-color: var(--primary-color, #4CAF50);
  color: #fff;
  border-radius: 24px;
  padding: 12px 20px;
}
.scan-button.scanning {
  opacity: 0.8;
}
.scan-icon .icon {
  width: 24px; height: 24px;
}
.scan-text { margin-top: 4px; }

.progress-section { padding: 16px; }
.progress-title { font-size: 16px; font-weight: 600; }
.progress-bar { height: 8px; background: #e0e0e0; border-radius: 8px; margin-top: 8px; }
.progress-fill { height: 8px; background: var(--primary-color, #4CAF50); border-radius: 8px; }

.stamps-wall { display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px; padding: 12px; }

/* 印章卡片样式 */
.stamp-item {
  background-color: #fff;
  border-radius: 12px;
  padding: 12px 8px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
}

.stamp-image {
  width: 64px;
  height: 64px;
  display: block;
  margin: 8px auto 4px;
}

.stamp-name {
  font-size: 12px;
  color: #333;
}

/* 未完成：置灰显示 */
.stamp-item.uncompleted .stamp-image {
  filter: none;
  opacity: 1;
}

/* 已完成：高亮边框并恢复彩色 */
.stamp-item.completed {
  border: 2px solid var(--primary-color, #4CAF50);
}
.stamp-item.completed .stamp-image {
  filter: none;
  opacity: 1;
}

.instruction-section { padding: 16px; }
.instruction-title { font-weight: 600; margin-bottom: 8px; font-size: 18px; }
.instruction-item { display: flex; align-items: flex-start; margin-bottom: 8px; }
.item-number { width: 22px; height: 22px; background: var(--primary-color, #4CAF50); color: #fff; border-radius: 50%; display:flex; align-items:center; justify-content:center; margin-right: 10px; font-size: 14px; }
.item-text { color: #555; font-size: 16px; }
.item-text-block { display: flex; flex-direction: column; }
.item-subtext { color: #999; font-size: 12px; margin-top: 4px; }

/* 自定义完成弹窗样式 */
.modal-overlay { position: fixed; top:0; left:0; right:0; bottom:0; background: rgba(0,0,0,0.3); display:flex; align-items:center; justify-content:center; z-index:9999; }
.modal { background:#fff; border-radius:12px; width: 320px; box-shadow: 0 8px 24px rgba(0,0,0,0.2); overflow:hidden; }
.modal-title { font-weight:600; font-size: 18px; text-align:center; padding: 16px; }
.modal-content { padding: 12px 16px; text-align:center; color:#333; display:flex; flex-direction:column; align-items:center; justify-content:center; }
.modal-line { margin: 6px 0; text-align: justify; width: 90%; }
.justify-filler { display:inline-block; width:100%; }
.modal-actions { padding: 12px 16px; text-align:center; }
.btn-primary { background:#4CAF50; color:#fff; border-radius:8px; padding: 8px 16px; display:inline-block; }
.bold { font-weight:700; font-size: 18px; }