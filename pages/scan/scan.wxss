/* pages/scan/scan.wxss */
.container {
  padding: 20rpx;
  background-color: var(--bg-secondary);
  min-height: 100vh;
}

/* 扫码区域 */
.scan-section {
  background-color: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: var(--shadow-base);
}

.scan-title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.scan-description {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.scan-button-container {
  margin: 40rpx 0;
}

.scan-button {
  width: 300rpx;
  height: 300rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.3);
  transition: all var(--transition-base);
}

.scan-button.scanning {
  background: linear-gradient(135deg, var(--warning-color), #F57C00);
  animation: scanning 1.5s infinite;
}

@keyframes scanning {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.scan-icon {
  margin-bottom: 20rpx;
}

.scan-icon .icon {
  width: 80rpx;
  height: 80rpx;
}

.scan-text {
  font-size: var(--font-size-base);
  color: var(--white);
  font-weight: bold;
}

.scan-result {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-base);
  border-left: 6rpx solid var(--primary-color);
}

.result-title {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.result-content {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  word-break: break-all;
}

/* 进度区域 */
.progress-section {
  background-color: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-base);
}

.progress-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.progress-info {
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: var(--font-size-base);
  color: var(--primary-color);
  font-weight: bold;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: var(--progress-height);
  background-color: var(--gray-200);
  border-radius: var(--progress-border-radius);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: var(--progress-border-radius);
  transition: width var(--transition-slow) ease;
}

/* 印章墙 */
.stamps-wall {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.stamp-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: var(--radius-lg);
  background-color: var(--bg-tertiary);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.stamp-item.uncompleted {
  filter: grayscale(100%);
  opacity: 0.6;
}

.stamp-item.completed {
  transform: scale(1.05);
  box-shadow: var(--shadow-md);
}

.stamp-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.stamp-name {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-align: center;
}

/* 使用说明 */
.instruction-section {
  background-color: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: 30rpx;
  box-shadow: var(--shadow-base);
}

.instruction-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.instruction-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
}

.item-number {
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-sm);
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}