<!--pages/index/index.wxml-->
<view class="container">
  <!-- 响应式地图显示 -->
  <view class="responsive-map-container">
    <view class="map-wrapper">
      <image 
        src="/images/backgrounds/打卡集章地图.png"
        class="responsive-map-image"
        mode="aspectFit"
        bindload="onMapImageLoad"
        binderror="onMapImageError"
      />
      
      <!-- 响应式打卡点圆圈 -->
      <view class="checkpoint-overlay-responsive">
        <view 
          class="checkpoint-circle-responsive {{userProgress.completedStamps.includes(item.id) ? 'completed' : 'pending'}}"
          wx:for="{{checkpoints}}" 
          wx:key="id"
          style="left: {{item.position.x}}rpx; top: {{item.position.y}}rpx;"
          bindtap="onCheckpointTap"
          data-checkpoint-id="{{item.id}}">
          <text class="circle-number">{{item.order}}</text>
        </view>
      </view>
    </view>
  </view>
</view>